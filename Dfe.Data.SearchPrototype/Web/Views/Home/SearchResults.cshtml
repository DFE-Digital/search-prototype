@{
    ViewData["Title"] = "Search Results";
    var searchKeyWord = ViewBag.SearchQuery as string;
}



@* <a asp-controller="Home" asp-action="Index" class="govuk-back-link">Back</a> *@

@* search component *@
<form method="get" action="@Url.Action("SearchResults", "home")">
    <govuk-input input-class="govuk-input govuk-!-width-two-thirds" input-value="@searchKeyWord" name="searchKeyWord">
        <govuk-input-label is-page-heading="true" class="govuk-label--l">Search</govuk-input-label>
        <govuk-input-hint>You can amend your search criteria here</govuk-input-hint>
        @*  <govuk-input-error-message>Enter key-word</govuk-input-error-message> *@
        <govuk-input-suffix style="padding: 0px">
            <button style="border: none">
                <svg class="gem-c-search__icon" width="27" height="27" viewBox="0 0 27 27" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
                    <circle cx="12.0161" cy="11.0161" r="8.51613" stroke="currentColor" stroke-width="3"></circle>
                    <line x1="17.8668" y1="17.3587" x2="26.4475" y2="25.9393" stroke="currentColor" stroke-width="3"></line>
                </svg>
            </button>
        </govuk-input-suffix>
    </govuk-input>
</form>
@* end of search component *@

@* display results *@

@model List<Dfe.Data.SearchPrototype.Web.Models.SearchItemViewModel>

@if (Model.Count >= 1)
{
    @* list results component to be inserted as partial view*@
    <div class="govuk-grid-column-two-thirds">
        <h3 class="govuk-heading-m">@Model.Count @(Model.Count > 1 ? "Results" : "Result")</h3>
        <hr />
        <ul style="list-style: none">
            @foreach (var searchItem in Model)
            {

                <li>
                    <h4>
                        <a href="/">
                            @searchItem.Name</a>
                    </h4>
                </li>
                <li>
                    <strong>URN:  </strong>@searchItem.Urn
                </li>

                <hr />
            }
        </ul>
    </div>
    @*  end of list component *@
}
else
{
    <p>Sorry no results found please amend your search criteria</p>
}
@* end of display results *@