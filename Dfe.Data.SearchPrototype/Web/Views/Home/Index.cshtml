@{
    ViewData["Title"] = "Home Page";
}

@model List<Dfe.Data.SearchPrototype.Web.Models.SearchItemViewModel>

<form method="get" action="@Url.Action("SearchResults", "Home")">
    <govuk-input input-class="govuk-input govuk-!-width-two-thirds" input-placeholder="Search by keyword" name="searchKeyWord">
        <govuk-input-label is-page-heading="true" class="govuk-label--l">Search Establishments</govuk-input-label>
        <govuk-input-hint>You can search establishments and check their performance</govuk-input-hint>
        @*  <govuk-input-error-message>Enter key-word</govuk-input-error-message> *@
        <govuk-input-suffix style="padding: 0px">
            <button style="border: none">
                <svg class="gem-c-search__icon" width="27" height="27" viewBox="0 0 27 27" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
                    <circle cx="12.0161" cy="11.0161" r="8.51613" stroke="currentColor" stroke-width="3"></circle>
                    <line x1="17.8668" y1="17.3587" x2="26.4475" y2="25.9393" stroke="currentColor" stroke-width="3"></line>
                </svg>
            </button>
        </govuk-input-suffix>
    </govuk-input>
</form>
